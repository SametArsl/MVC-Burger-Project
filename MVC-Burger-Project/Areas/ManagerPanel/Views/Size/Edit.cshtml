@model MVC_Burger_Project.Models.Entities.Size

@{
    ViewData["Title"] = "Edit";
}
<div class="row" style="margin-top:200px">
    <div class="container col-md-4">
        <h1 class="text-center">Edit</h1>
        <h4 class="text-center">Edit Selected Size Information</h4>
        <hr />
        <form asp-action="Edit" style="margin-top:50px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 text-center" style="margin-bottom:400px">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark text-center" style="margin-left:20px">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
