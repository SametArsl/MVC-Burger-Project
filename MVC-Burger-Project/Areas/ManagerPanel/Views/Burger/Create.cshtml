@model MVC_Burger_Project.ModelVM.BurgerVM

@{
    ViewData["Title"] = "Create";
    
}

<div class="row" style="margin-top:200px">
    <div class="container col-md-4">
        <h1 class="text-center">Create</h1>

        <h4 class="text-center">Add New Burger to Menu</h4>
        <hr />
        <form asp-action="Create" style="margin-top:50px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Burger.Name" class="form-label">Burger Name</label>
                <input asp-for="Burger.Name" class="form-control" />
                <span asp-validation-for="Burger.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Burger.Category.Name" class="form-label mt-2">Select Category</label>
                <select asp-for="Burger.CategoryID" class="form-control" asp-items="@Model.Categories"></select>
            </div>
            <div class="form-group">
                <label asp-for="Burger.Description" class="form-label mt-2">Burger Description</label>
                <input asp-for="Burger.Description" class="form-control" />
                <span asp-validation-for="Burger.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Burger.Picture" class="form-label mt-2">Select Picture</label>
                <input asp-for="Burger.Picture" class="form-control" type="file" />
                <span asp-validation-for="Burger.Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Burger.Price" class="form-label mt-2">Price</label>
                <input asp-for="Burger.Price" class="form-control" />
                <span asp-validation-for="Burger.Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 text-center" style="margin-bottom:150px">
                <input type="submit" value="Create" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-outline-dark text-center" style="margin-left:20px">Back to List</a>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-validation-summary="All"></a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
