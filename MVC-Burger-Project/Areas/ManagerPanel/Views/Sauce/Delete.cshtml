@model MVC_Burger_Project.Models.Entities.Sauce

@{
    ViewData["Title"] = "Delete";
    string imageFolderPath = "/img/sauce/";
}

<div class="container col-md-4" style="margin-top:200px">
    <h1 class="text-center">Delete</h1>

    <h3 class="text-center">Are you sure you want to delete this Sauce?</h3>
    <hr />
    <dl class="row" style="margin-top:50px">
        <dt class="col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd class="col-sm-10 mt-2">
            <img src="@($"{imageFolderPath}{Model.Picture}")" width="150" height="150" />
        </dd>
        <dt class="col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10 mt-2">
            $ @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-5 text-center" style="margin-bottom:250px">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-dark text-center" style="margin-left:20px">Back to List</a>
    </form>
</div>
