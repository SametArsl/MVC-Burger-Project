@model MVC_Burger_Project.Models.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="container col-md-4" style="margin-top:200px">
    <h1 class="text-center">Delete</h1>

    <h3 class="text-center">Are you sure you want to delete this Category?</h3>
    <hr />
    <div>
        <dl class="row text-center" style="margin-top:50px">
            <dt class="col-sm-6 mt-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-6 mt-2">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-5 text-center" style="margin-bottom:480px">
